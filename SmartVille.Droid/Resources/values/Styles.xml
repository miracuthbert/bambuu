  <style name="Theme.DesignDefault2" parent="Base.Theme.DesignDefault"></style>

  <!-- Theme with ActionBar -->
  <style name="MyTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="windowNoTitle">true</item>
    <item name="colorPrimary">#34495E</item>
    <item name="colorPrimaryDark">#2C3E50</item>
    <item name="colorAccent">#FF4081</item>
  </style>
  
  <style name="Base.Theme.DesignDefault" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">#34495E</item>
    <item name="colorPrimaryDark">#2C3E50</item>
    <item name="colorAccent">#FF4081</item>
  </style>

  <style name="Widget.CardContent" parent="android:Widget">
    <item name="android:paddingLeft">16dp</item>
    <item name="android:paddingRight">16dp</item>
    <item name="android:paddingTop">24dp</item>
    <item name="android:paddingBottom">24dp</item>
