<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="mySplashScreen.Theme" parent="android:Theme">
    <item name="android:windowBackground">
      @drawable/app_icon
    </item>
    <item name="android:windowNoTitle">true</item>
  </style>

  <style name="Theme.DesignDefault" parent="Base.Theme.DesignDefault"></style>

  <style name="Theme.DesignDefault2" parent="Base.Theme.DesignDefault"></style>

  <!-- Theme with ActionBar -->
  <style name="MyTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="windowNoTitle">true</item>
    <item name="colorPrimary">#34495E</item>
    <item name="colorPrimaryDark">#2C3E50</item>
    <item name="colorAccent">#FF4081</item>
  </style>

  <style name="Base.Theme.DesignDefault" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">#34495E</item>
    <item name="colorPrimaryDark">#2C3E50</item>
    <item name="colorAccent">#FF4081</item>
  </style>

  <style name="Widget.CardContent" parent="android:Widget">
    <item name="android:paddingLeft">16dp</item>
    <item name="android:paddingRight">16dp</item>
    <item name="android:paddingTop">24dp</item>
    <item name="android:paddingBottom">24dp</item>
    <item name="android:orientation">vertical</item>
  </style>

  <style name="Theme.DesignDefault.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

  <style name="Theme.DesignDefaultPopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

  <style name="CustomViewText" parent="@android:style/Widget.TextView">
    <item name="android:textSize">18sp</item>
    <item name="android:textColor">#263238</item>
  </style>

  <style name="MyTheme" parent="MyTheme.Base">
    <item name="actionBarWidgetTheme">@style/MyTheme.WidgetStyle</item>
  </style>

  <style name="MainTheme" parent="MyTheme.Base">
    <item name="drawerArrowStyle">@style/MyDrawerArrowStyle</item>
  </style>

  <style name="MyDrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
    <item name="color">#F5F5F5</item>
    <item name="spinBars">true</item>
  </style>

  <style name="MyTheme.WidgetStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
    <!-- THIS is where you can color the widget! -->
    <item name="color">#F5F5F5</item>
  </style>

  <!-- Base theme applied no matter what API -->
  <style name="MyTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="windowNoTitle">true</item>
    <!--We will be using the toolbar so no need to show ActionBar-->
    <item name="windowActionBar">false</item>
    <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette-->
    <!-- colorPrimary is used for the default action bar background -->
    <item name="colorPrimary">#673AB7</item>
    <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">#512DA8</item>
    <!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
    <item name="colorAccent">#D1C4E9</item>

    <item name="colorControlHighlight">#448AFF</item>
    <!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight and colorSwitchThumbNormal. -->
  </style>
</resources>